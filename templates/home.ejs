<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="apple-touch-icon" sizes="57x57" href="/apple-icon-57x57.png">
    <title>Home</title>
    <style>
        body  {
            background-color: aquamarine;  background: linear-gradient(to right, #bbd2c5, #536976, #292e49); 
            height: 100vh;
            
        }
        #app {
            
            margin: 20px;
            padding: 50px;
        }

        h2{
            display: grid;
            /* display: block; */

        }
        h1 {
            font-size: 50px;
            font-weight: 540;
            font-family: Montserrat;
            text-align: center;
            margin-top: 5%;
        }

        span{
            color: #8CA2A1;
            font-size: 64px;
            font-weight: 500;
        }

        .welcomebuttons {
            display: flex;
            justify-content: space-between;
            margin: 5% 25%;
        }

        .user {
            background-color: #ACB0B0;
            display: flex;
            margin-bottom: 15px;
            padding: 20px;
            border-radius: 12px;
            box-shadow: inset 0 -1em 3em  rgba(0,0,0,0.1);

        }

        .details {
            /* display: grid; */
            margin-left: 3%;
        }
        img {
            border-radius: 5px;
            width : 350px ;
            height : 300px;
            box-shadow: 4px 4px 10px rgba(0,0,0,2)
        }

        .btn{
            background-color: #35383D;
            color: #fff;
            display: grid;
            border-radius: 10px;
            padding: 10px;
            box-shadow: 4px 4px 7px rgba(0,0,0,2), -2px -2px 0.5px rgba(255, 255, 255, 0.07) ;
            border: 0px;
            cursor: grab;

        }

        .hel:hover {
            cursor: grab;
        }

        .btn1 {
            background-color: brown;
            box-shadow: 4px 4px 7px red;
        }



        .delAndUpdate {
            align-items: center;
            display: grid;
            margin: 3%;
            cursor: grab;
        }

   

    </style>

<script >
    // Backend API URL
const api_url = "http://127.0.0.1:3000/api/blog/blogs";


  
// Defining async function
async function getapi(url) {
    
   try {
    
    const response = await fetch(url)
    const data = await response.json()

    const newht =  data.map(user => {
        // console.log(user)
        return `<div class ="user">
            <img src="${user.photo.secure_url}" alt="${user.author}"  >
            <div class=" details">
            <h2> Title : ${user.title}</h2>
            <h2> Name : ${user.author}  </h2>
            <p> id : ${user._id}</p>

            <h4> ShortDescription : <h5>${user.desforSeo}</h5></h4>

            </div>

            <div class="delAndUpdate">
            <button class="btn btn1 " onclick="location.href='/api/blog/deleteone/'" type="button"> Delete</button>

            <button class="btn " style="margin-top: 20px; background-color: green;" onclick="location.href='/updateblog'" type="button"> Update</button>

            </div>
            </div>`
            
    })

    document.getElementById("app").insertAdjacentHTML("afterbegin", newht)

    
    

   } catch (error) {
       throw error
   }
    
}
</script>

</head>
<body>
   
    <h1>Welcome to fastify <span>Dev Blogs</span></h1>

    <div class="welcomebuttons">

    <button class="btn" style="margin-top: 20px; background-color: green; "  onclick="location.href='/addblog'"  type="button"> Add New Blog</button>
    <br>
    <input  class="btn" style="margin-top: 20px; background-color: #A7BDB6;" type="button" onclick="getapi(api_url)" value="Get All Blogs">
    </div>
    <div id="app">
    </div>

</body>
</html>